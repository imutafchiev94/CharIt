<section class="bg-lighter"> 
      <div class="container pb-80">
        <div class="section-title text-center">
          <div class="row">
            <div class="col-md-8 col-md-offset-2">
              {{#if isAuthenticated}}
                <div class="widget">
                  <a class="btn btn-orange btn-lg btn-block no-border" href="/charities/new">Add Charity</a>
                </div>
              {{/if}}
              <h2 class="mt-0 line-height-1">Our <span class="text-theme-colored"> Causes</span></h2>
              <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Rem autem<br> voluptatem obcaecati!</p>
            </div>
          </div>
        </div>
        <div class="row mtli-row-clearfix">
          <div class="row" data-nav="true">
            {{#each charities}}
              <div class="item col-md-4">
                <div class="causes bg-lighter box-hover-effect effect1 maxwidth500 mb-sm-30">
                  <div class="thumb">
                    <img class="img-fullwidth" alt="" src="{{this.imageUrl}}">
                  </div>
                  <div class="progress-item mt-0">
                    <div class="progress mb-0">
                      <div class="progress-bar" data-percent="84"></div>
                    </div>
                  </div>
                  <div class="causes-details clearfix border-bottom p-15 pt-10">
                    <h5><a href="charities/{{this._id}}">{{this.title}}Charity Name</a></h5>
                    <p>{{this.description}}</p>
                    <ul class="list-inline clearfix mt-20">
                      <li class="pull-left pr-0">Raised: $1890</li>
                      <li class="lbl-orange pull-right pr-0">Goal: $2500</li>
                    </ul>
                    <div class="mt-10">
                     <a class="btn btn-orange btn-flat btn-sm pull-left mt-10" href="#">Donate</a>
                     <div class="pull-right mt-15"><i class="fa fa-heart-o text-theme-colored"></i> 89 Donors</div>
                    </div>
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </section>