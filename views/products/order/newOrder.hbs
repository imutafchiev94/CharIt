<section>
  <div class="container">
    <div class="section-content">
      <div class="row mt-30">
        <form id="checkout-form" action="/products/order/" method="POST">
          <div class="col-md-6">
            <div class="billing-details">
              <h3 class="mb-30 lbl-orange">Billing Details</h3>
              <div class="row">
                <div class="form-group col-md-6">
