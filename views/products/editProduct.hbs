<h2>{{message}}</h2>
<form action="/products/{{_id}}" method="POST">
    <input type="text" name="product[title]" value="{{product.title}}" placeholder="title"></input>
    <input type="text" name="product[description]" value="{{product.description}}" placeholder="description"></input>
    <input type="text" name="product[price]" value="{{product.price}}" placeholder="price"></input>
    <input type="text" name="product[quantity]" value="{{product.quantity}}" placeholder="quantity"></input>
    <label for="cars">Category:</label>
    <select name="product[category]">
        {{#each categories}}
            <option value="{{this._id}}">{{this.title}}</option>
        {{/each}}
    </select>
    <button type="submit">Save</button>
</form>