<h2>{{message}}</h2>
{{#with product}}
    <form action="/products/{{_id}}" method="POST">
        <input type="text" name="product[title]" value="{{title}}" placeholder="title"></input>
        <input type="text" name="product[description]" value="{{description}}" placeholder="description"></input>
        <input type="text" name="product[price]" value="{{price}}" placeholder="price"></input>
        <input type="text" name="product[category]" value="{{category}}" placeholder="category"></input>
        <input type="text" name="product[quantity]" value="{{quantity}}" placeholder="quantity"></input>
        <button type="submit">Save</button>
    </form>
{{/with}}