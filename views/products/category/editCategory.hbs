<section id="home" class="divider parallax fullscreen layer-overlay overlay-white-9" data-bg-img="http://placehold.it/1920x1280">
      <div class="display-table">
        <div class="display-table-cell">
          <div class="container">
            <div class="row">
              <div class="col-md-6 col-md-push-3">
                <h2 class="lbl-orange">Edit Category {{category.title}}</h2>
                <form name="login-form" action="/products/category/{{category._id}}" method="POST" class="form-transparent clearfix">
                  <div class="row">
                    <div class="form-group col-md-9">
                      <label for="form_title">Title</label>
                      <input id="form_title" name="category[title]" value="{{category.title}}" class="form-control" type="text">
                    </div>
                    <div class="form-group col-md-3 mt-30">
                        <button type="button" class="btn btn-danger btn-lg btn-block no-border" data-toggle="modal" data-target=".bs-example-modal-sm">Delete</button>
                    </div>
                  </div>
                  <div class="clear text-center">
                    <button type="submit" class="btn btn-orange btn-lg btn-block no-border">Save</button>
                    </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

{{!-- Delete modal --}}
<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                    <h4 class="modal-title" id="myModalLabel3">Delete Category</h4>
                </div>
                <form action="/products/{{category._id}}/delete" method="POST">
                    <div class="modal-body">
                        <p>Are you sure you want to delete category {{category.title}}?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>